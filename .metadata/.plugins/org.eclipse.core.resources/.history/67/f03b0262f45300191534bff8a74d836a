package buoi01_nopbai;
import java.util.Scanner;
public class ThapSangNhiVaNguocLai {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ThapVeNhi(10);
		NhiVeThap(100101);
	}
	public static void ThapVeNhi(int decimal) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhập 1 số thập phân: ");
		int decimalNumber = scanner.nextInt();
		System.out.print("Hệ nhị phân của " + decimalNumber +" là :");
		System.out.print(Integer.toBinaryString(decimalNumber));
	}
	public static void NhiVeThap(String a) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhập 1 số nhị phân: ");
		String binary = scanner.nextLine();
		System.out.print("Hệ thập phân của " + binary +" là :");
		int binaryNumber = Integer.parseInt(binary, 2);
		System.out.println("Binary: " + binaryNumber);
	}

}
